<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Swadist_food.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="603dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order details"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_2" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_3" />

            <LinearLayout
                android:layout_width="450dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  2 item ordered"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   See details >"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="600dp"
            android:layout_height="5dp"
            android:background="#D3D3D3" />
        <!--            android:text="Vertical Line"-->

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Id"
                android:textColor="#A9A9A9"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ORDERNUMBER4867392208600039"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </LinearLayout>

        <TextView
            android:layout_width="600dp"
            android:layout_height="5dp"
            android:background="#D3D3D3" />

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Date"
                android:textColor="#A9A9A9"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Oct 23,2019 9:08 PM"
                android:textColor="#696969"
                android:textSize="30dp" />

        </LinearLayout>

        <TextView
            android:layout_width="600dp"
            android:layout_height="5dp"
            android:background="#D3D3D3" />

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Mode"
                android:textColor="#A9A9A9"
                android:textSize="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                     PHONE PE"
                android:textColor="#696969"
                android:textSize="30dp" />

        </LinearLayout>

        <TextView
            android:layout_width="600dp"
            android:layout_height="5dp"
            android:background="#D3D3D3" />

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="200dp"
            android:layout_marginVertical="50dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="40dp" />

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="300dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="OFFICE"
                    android:textColor="@color/black"
                    android:textSize="40dp" />

                <TextView
                    android:layout_width="500dp"
                    android:layout_height="150dp"
                    android:text="2ndFloor, Hno 12 ,Road no 37,Back side of
MGS Hospital , West Punjabi Bagh,Pujabi Bagh ,Delhi , 110026 , india





Instruction :Call on arrival ,bring cutlery"
                    android:textColor="#696969"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="600dp"
            android:layout_height="5dp"
            android:background="#D3D3D3" />

        <ImageView
            android:layout_width="600dp"
            android:layout_height="105dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_4" />

        <TextView
            android:layout_width="600dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="50dp"
            android:text="Preparing Dinner."

            android:textColor="@color/black"
            android:textSize="30dp" />
        <TextView
            android:layout_width="600dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="50dp"
            android:text="Expected arrival time:09:51PM"
            android:textColor="#A9A9A9"
            android:textSize="25dp" />
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:text="Track Order"
            android:textSize="30dp"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:background="#f2f2f2" />
        <TextView
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:background="@drawable/bg"
            android:text="Report Issue"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:paddingTop="20dp"
            android:textAlignment="center"

            />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>